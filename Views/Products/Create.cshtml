@model Trendyol_Integration.ViewModels.CreateProductModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm("CreateProceed","Product"))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(model => model.product.CargoCompanyId)
        @Html.DropDownListFor(model => model.product.CargoCompanyId, new SelectList(Model.providers, "Id", "Name"))
    </div>
    @Html.HiddenFor(model=>model.product.Category)

<select class="category-select" name="categories" id="categories">
    @foreach (var item in Model.categories) {
        <option  value=@item.CategoryId>@item.CategoryName</option>
    }

</select>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
